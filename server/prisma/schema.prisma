// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ApiKey {
  id        String    @id @default(uuid())
  key       String    @unique
  createdAt DateTime  @default(now())
  messages  Message[]
  contexts  Context[]
}

model Message {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  content   String
  roleId    String
  apiKeyId  String
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Restrict)
  apiKey    ApiKey   @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)
}

model Role {
  id       String    @id @default(uuid())
  type     RoleType  @unique
  messages Message[]
}

model Context {
  id        String      @id @default(uuid())
  createdAt DateTime    @default(now())
  content   String
  typeId    String
  apiKeyId  String
  type      ContextType @relation(fields: [typeId], references: [id], onDelete: Restrict)
  apiKey    ApiKey      @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)
}

model ContextType {
  id       String          @id @default(uuid())
  name     ContextTypeName @unique
  contexts Context[]
}

enum RoleType {
  System
  Assistant
  User
}

enum ContextTypeName {
  UserMessage
  Summary
}
